// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Product {
  id          String      @id @default(uuid()) @db.Uuid
  name        String      @db.Text
  description String?     @db.Text
  price       Decimal     @db.Decimal
  createdAt   DateTime    @default(now()) @map("created_at") @db.Timestamptz(6)
  imageUrl    String?     @map("image_url") @db.Text
  stock       Int         @default(0)
  
  orderItems  OrderItem[]

  @@map("products")
}

model Order {
  id              String      @id @default(uuid()) @db.Uuid
  userId          String?     @map("user_id") @db.Uuid
  stripeSessionId String?     @map("stripe_session_id") @db.Text
  status          String      @default("pending") @db.Text
  createdAt       DateTime    @default(now()) @map("created_at") @db.Timestamptz(6)
  totalAmount     Decimal     @default(0) @map("total_amount") @db.Decimal
  customerEmail   String?     @map("customer_email") @db.Text
  customerName    String?     @map("customer_name") @db.Text
  shippingAddress String?     @map("shipping_address") @db.Text
  
  items           OrderItem[]

  @@map("orders")
}

model OrderItem {
  id              String      @id @default(uuid()) @db.Uuid
  orderId         String?     @map("order_id") @db.Uuid
  productId       String?     @map("product_id") @db.Uuid
  quantity        Int         @default(1)
  priceAtPurchase Decimal     @map("price_at_purchase") @db.Decimal
  createdAt       DateTime    @default(now()) @map("created_at") @db.Timestamptz(6)
  
  order           Order?      @relation(fields: [orderId], references: [id], onDelete: Cascade)
  product         Product?    @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@map("order_items")
}
